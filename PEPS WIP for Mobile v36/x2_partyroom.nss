#include "x0_i0_henchman"

int StartingConditional()
{
    // Use to limit to 2, now checks the maximum henchman.
    if (X2_GetNumberOfHenchmen(GetPCSpeaker()) <= GetMaxHenchmen() - 1)
    {
        return TRUE;
    }
    return FALSE;
}
